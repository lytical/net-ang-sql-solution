{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "dotnet",
      "task": "build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "label": "dotnet: build"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "${workspaceFolder}/host/host.csproj"
      ],
      "problemMatcher": {
        "base": "$msCompile",
        "background": {
          "activeOnStart": true,
          "beginsPattern": { "regexp": "Using launch settings from\\s"},
          "endsPattern": {"regexp": "dotnet watch"}
        }
      },
      "isBackground": true,
      "dependsOn": "watch client",
      "options": {
        "cwd": "${workspaceFolder}/host"
      }
    },
    {
      "type": "npm",
      "script": "watch",
      "path": "client",
      "group": "test",
      "problemMatcher": {
        "base": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": { "regexp": "Application bundle generation (failed|complete)."},
          "endsPattern": {"regexp": "Output location:\\s"}
        }
      },
      "isBackground": true,
      "label": "watch client",
      "detail": "ng build --watch --configuration development"
    }
  ]
}
